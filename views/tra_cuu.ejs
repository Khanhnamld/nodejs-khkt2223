<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>

    <!-- ===== ===== Custom Css ===== ===== -->
    <link rel="stylesheet" href="/css/style2.css">
    <link rel="stylesheet" href="responsive.css">

    <!-- ===== ===== Remix Font Icons Cdn ===== ===== -->
    <link rel="stylesheet" href="fonts/remixicon.css">
</head>

<body>
    <!-- ===== ===== Body Main-Background ===== ===== -->
    <span class="main_bg"></span>


    <div class="container">

        <!-- ===== ===== Header/Navbar ===== ===== -->
        <!-- <header>
            <div class="brandLogo">
                <span>Hồ sơ Bệnh nhân</span>
            </div>
        </header> -->


        <!-- ===== ===== User Main-Profile ===== ===== -->
        <section class="userProfile card">
            <div class="profile">
                <img src="img/profile.png" alt="profile" width="200px" height="200px">
            </div>
        </section>


        <!-- ===== ===== Work & Skills Section ===== ===== -->
        <section class="work_skills card">

            <!-- ===== ===== Work Contaienr ===== ===== -->
            <div class="work">
                <h1 class="heading">Tiểu sử</h1>
                <div class="primary">
                    <h1>Không mắc bệnh</h1>
                    <h1></h1>
                </div>
            </div>
        </section>


        <!-- ===== ===== User Details Sections ===== ===== -->
        <section class="userDetails card">
            <div class="userName">
                <!-- <div class="user"> -->
                    <h1 class="heading">Thông tin cá nhân</h1>
                <!-- </div> -->
                <h1 class="name">Họ và tên: <%=users[id.id].ten%></h1>
                <h1 class="name">Tuổi: <%=users[id.id].tuoi%> tuổi</h1>
                <h1 class="name">Giới tính: <%=users[id.id].gioitinh%></h1>
                <h1 class="name">Quê quán: Thành phố Hồ Chí Minh</h1>
            </div>

        </section>


        <!-- ===== ===== Timeline & About Sections ===== ===== -->
        <section class="timeline_about card">
            <div class="tabs">
                <ul>
                    <li class="timeline">
                        <!-- <i class="ri-eye-fill ri"></i> -->
                        <span>KẾT QUẢ SÀNG LỌC</span>
                    </li>
                    <!-- <button data-modal-target="#modal">
                        <i class="fas fa-info-circle fa-1x"></i>
                    </button> -->
                </ul>
            </div>

            <div class="contact_Info">
                <!-- <h1 class="heading"></h1> -->
                <ul>
                <!-- <li class="phone"> -->
                            <% if (users[id.id].ketqua >= 32) { %> 
                            <h4 class="label" style='color: orange;'>Có nguy cơ</h4>
                            <% } else{ %>
                            <h4 class="label" style='color: green;'>Không có nguy cơ</h4>
                            <% } %>
                 <!-- </li> -->
                </ul>
            </div>
        </section>
    </div>

</body>

</html>
