                </div>
            </div>
            <div id="overlay"></div>
            <div class="card">
                <div class="card-content">
                    <div class="number">14</div>
                    <div class="card-name">Bài tập</div>
                </div>
                <div class="icon-box">
                    <i class="fas fa-book"></i>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <div class="number">Tốt</div>
                    <div class="card-name">Đánh giá</div>
                </div>
                <div class="icon-box">
                    <i class="fa fa-check"></i>
                </div>
            </div>
            <div class="card2">
                <!-- <div class="card-content">
                    <div class="number">68</div>
                    <div class="card-name">Employees</div>
                </div>
                <div class="icon-box">
                    <i class="fas fa-users"></i>
                </div> -->
            </div>
        </div>
        <div class="charts">
            <div class="chart">
                <h2>Bài tập (7 ngày qua)</h2>
                <div>
                    <canvas id="lineChart"></canvas>
                </div>
            </div>
            <div class="chart doughnut-chart">
                <h2>Employees</h2>
                <div>
                    <canvas id="doughnut"></canvas>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div id="nhantin" class="main">
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.1/dist/chart.min.js"></script>
